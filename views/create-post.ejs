<%- include('header') %>

<main>
  <h1>Skapa inlägg</h1>
  <% if (user) { %>
  <form action="/create-post" method="POST">
    <label for="title">Rubrik:</label>
    <input type="text" id="title" name="title" required />

    <label for="content">Innehåll:</label>
    <textarea id="content" name="content" required></textarea>

    <!-- Ta bort möjligheten att skriva in signatur från formuläret -->

    <!-- Håll användarens signatur dold men skicka det med formuläret -->
    <input
      type="hidden"
      id="signature"
      name="signature"
      value="<%= user.signature %>"
    />

    <button type="submit">Skapa inlägg</button>
  </form>
  <% } else { %>
  <p>Du måste vara inloggad för att skapa inlägg.</p>
  <% } %>
</main>

<%- include('footer') %>
